name: Sync Fork

on:
  schedule:
    - cron: '0 2 * * *'   # 每天 UTC 2 点自动运行
  workflow_dispatch:

jobs:
  sync:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout forked repo
        uses: actions/checkout@v3

      - name: Configure git
        run: |
          git config --global user.name "github-actions"
          git config --global user.email "github-actions@github.com"

      - name: Add upstream and fetch
        run: |
          git remote | grep upstream || git remote add upstream https://github.com/cmliu/CF-Workers-SUB
          git fetch upstream

      - name: Merge upstream/main into forked main
        run: |
          git checkout main
          git merge upstream/main || echo "::notice::Nothing to merge or merge failed"

      - name: Push changes to forked repo
        run: |
          git push origin main
